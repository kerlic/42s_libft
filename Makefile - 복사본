NAME = libft.a

CC = gcc
CFLAGS = -Wall -Wextra -Werror
AR = ar rcs
RM = rm -f

SRCS =  ft_tolower.c    \
         ft_memset.c     \
	 ft_bzero.c     \
         ft_memccpy.c


SRCS_DIR = ./


OBJS_DIR = ./
OBJS = $(FILES:%.o:%.c)



.c.o: $(SRCS)
	$(CC) $(CFLAGS) -c -o $@ $<

$(NAME): $(OBJS)
	$(AR) $@ $^

#so:
#	$(CC) -fPIC $(CFLAGS) $(SRCS)
#	gcc -shared -o libft.so $(OBJS)

all: $(NAME)

clean:
	$(RM) $(OBJS)

fclean: clean
	$(RM) $(NAME)

re: clean all

.PHONY: bonus all clean fclean re

CFLAGS = -Wall -Wextra -Werror

#SRCDIR = srcs
# INCDIR = includes
#SRCS = $(wildcard $(SRCDIR)/*.c)
AR = ar
LIB_OUT = libft.a
SRCS	=	ft_tolower.c	\
		ft_memset.c	\
		ft_bzero.c	\
		ft_memccpy.c	\

OBJS = $(SRCS:.c=.o)


#all: $(TARGET)

%.o : %.c %libft.h
	gcc $(CFLAGS) -c $< -o $@ 

$(LIB_OUT) : 	
	$(AR) rc $(LIB_OUT) $(SRCS)

clean :
	rm -f $(OBJS)

#fclean: clean
#	rm -f $(TARGET)

re: clean libft.a

